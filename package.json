{
    "name": "on-events",
    "version": "0.0.3",
    "description": "Tiny DOM event utility with composable sugar, delegation, and cleanup.",
    "type": "module",
    "sideEffects": false,
    "main": "./dist/on-events.min.js",
    "module": "./dist/on-events.min.js",
    "types": "./dist/on-events.d.ts",
