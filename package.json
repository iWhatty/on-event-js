        "event-listener",
        "delegate",
        "frontend",
        "browser",
        "javascript",
        "tiny",
        "utility"
    ],
    "author": "DR.WATT",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iWhatty/on-event-js.git"
    },
    "scripts": {
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest --watch",
        "build": "node build.js",
        "prepublishOnly": "npm run build && npm run test:run"
    },
    "devDependencies": {
        "esbuild": "^0.25.3",
        "jsdom": "^28.1.0",
        "vitest": "^4.0.18"
